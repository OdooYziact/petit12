<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="email_compose_message_wizard_form" model="ir.ui.view">
        <field name="name">email_compose_message_wizard_form</field>
        <field name="model">mail.compose.message</field>
        <field name="inherit_id" ref="mail.email_compose_message_wizard_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='partner_ids']" position="after">
                <field name="partner_id"/>
            </xpath>
            <xpath expr="//footer" position="inside">
                <button string="Add contact" attrs="{'invisible': [('partner_id', '=', False)]}" name="action_add_contact" type="object" class="btn-primary"/>
            </xpath>

        </field>
    </record>

</odoo>