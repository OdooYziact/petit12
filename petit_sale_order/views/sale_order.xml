<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- FORM -->
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">view_order_form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="priority" eval="50"/>
        <field name="arch" type="xml">

            <!-- /////////////////////////////////// Order header modification ///////////////////////////////////// -->
            <!-- modification du domaine partner_id pour ajout du champ contact_id -->
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="domain">[('customer','=',True), ('is_company', '=', True)]</attribute>
            </xpath>
            <!-- ajout du champ contact_id -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="partner_contact_id" groups="sale.group_delivery_invoice_address" domain="[('parent_id', '=', partner_id), ('type', '=', 'contact')]" options='{"always_reload": True}' attrs="{'readonly': [('partner_id', '=', False)]}"/>
            </xpath>
            <!--Customer order reference related fields-->
            <xpath expr="//field[@name='partner_invoice_id']" position="before">
                <field name="is_waiting"/>
                <field name="client_order_ref" string="Numéro de commande client" attrs="{'required':[('state', 'in', ('sale', 'done'))]}" />
            </xpath>
            <!-- add fixed_cost fields -->
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <label for="fixed_cost_id"/>
                <div class="o_row">
                    <field name="fixed_cost_id" attrs="{'readonly': [('state', 'in', ('done', 'cancel'))]}"/>
                    <field name="fixed_cost_qty" attrs="{'readonly': [('state', 'in', ('done', 'cancel'))]}"/>
                    <field name="fixed_cost_uom_id"/>
                </div>
            </xpath>

            <xpath expr="//h1" position="before">
                <div attrs="{'invisible': [('margin', '&gt;', 0.0)]}">
                    <span class="label label-danger pull-right">Negative margin rate</span>
                </div>
            </xpath>


            <!-- ///////////////////////////////// Order total  //////////////////////////////////////////////////// -->
            <!--price_subtotal modification-->
            <!--<xpath expr="//field[@name='amount_untaxed']" position="before">
                <field name="fixed_cost_total" widget="monetary" groups="sale.group_show_price_subtotal" string="Total Fixed Cost"/>
            </xpath>-->

            <xpath expr="//field[@name='amount_untaxed']" position="attributes">
                <attribute name="string">PV HT</attribute>
            </xpath>

            <xpath expr="//field[@name='amount_total']" position="attributes">
                <attribute name="string">PV TTC</attribute>
            </xpath>

            <xpath expr="//field[@name='amount_untaxed']" position="before">
                <field name="total_purchase_price" widget="monetary" groups="sale.group_show_price_subtotal" string="Total Cost Price"/>
            </xpath>

            <!-- ///////////////////////////////// Sale order lines modifications ////////////////////////////////// -->
            <!-- hide tax related fields -->
            <xpath expr="//tree/field[@name='tax_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//tree/field[@name='analytic_tag_ids']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <!-- Product_uom_qty modification -->
            <xpath expr="//tree/field[@name='product_uom_qty']" position="replace">
                <field name="product_uom_qty" context="{'partner_id':parent.partner_id, 'quantity':product_uom_qty, 'pricelist':parent.pricelist_id, 'uom':product_uom, 'company_id': parent.company_id}"/>
            </xpath>
            <!--Move purchase_price-->
            <xpath expr="//tree/field[@name='purchase_price']" position="replace">
            </xpath>
            <xpath expr="//tree/field[@name='product_uom_qty']" position="before">
                <field name="purchase_price" groups="base.group_user" string="Cost price"/>
            </xpath>
            <!--Move price_unit -->
            <xpath expr="//tree/field[@name='price_unit']" position="replace">
            </xpath>
            <xpath expr="//tree/field[@name='product_uom_qty']" position="before">
                <field name="price_unit" attrs="{'readonly': [('qty_invoiced', '&gt;', 0)]}" string="Price Unit (without taxes)"/>
            </xpath>
            <!--price_subtotal modification-->
            <xpath expr="//tree/field[@name='price_subtotal']" position="replace">
                <field name="price_subtotal" widget="monetary" groups="sale.group_show_price_subtotal" string="Subtotal Price (without taxes)"/>
            </xpath>

            <!-- //////////////////////////////////// Button_box modification ////////////////////////////////////// -->
            <xpath expr="//div[@name='button_box']/button[@name='action_view_delivery']/field" position="attributes">
                <attribute name="string"># Delivery form</attribute>
            </xpath>

            <xpath expr="//field[@name='delivery_count']" position="attributes">
                <attribute name="string">Delivery form</attribute>
            </xpath>

            <xpath expr="//button[@name='print_quotation']" position="after">
                <button name="button_print_picking" string="Print delivery form" type="object" states="done" class="btn-primary o_sale_print" attrs="{'invisible': [('delivery_count', '=', 0)]}" groups="base.group_user"/>
            </xpath>



            <!-- //////////////////////////////// Modification Order footer //////////////////////////////////////// -->
            <!-- ajout d'un onglet partner_references -->
            <xpath expr="//notebook/page[last()]" position="after">
                <page string="Partner References" >
                    <field name="res_model_id" invisible="1"/>
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6">
                            <field name="partner_references" nocreate="1"
                                   context="{'default_res_model': _rel_model, '_default_res_id': _rel_id, 'default_partner_id': partner_id}"
                                   options='{"no_open": True,"no_create": 1, "no_create_edit": 1}'>
                                <!--attrs="{'invisible': [('partner_references', '=', [])]}">-->
                                <tree create="false" delete="false" editable="true" decoration-warning="required">
                                    <field name='sequence' groups="base.group_no_one"/>
                                    <field name='name'/>
                                    <field name='note' />
                                    <field name='value'/>
                                    <field name='res_id' groups="base.group_no_one"/>
                                    <field name='res_model_id' groups="base.group_no_one"/>
                                    <field name='partner_id' groups="base.group_no_one"/>
                                    <field name='required' groups="base.group_no_one"/>
                                </tree>
                            </field>
                        </div>
                    </div>
                    <group>
                        <group>
                            <div class="oe_inline">
                                <button name="action_check_references" type="object" string="Check"/>
                                <button name="action_update_references" type="object" string="Update"/>
                                <button name="action_clear_references" type="object" string="Clear"/>
                            </div>
                        </group>
                        <group>
                            <field name="_rel_id" groups="base.group_no_one"/>
                            <field name="_rel_model" groups="base.group_no_one"/>
                            <field name="res_model_id" groups="base.group_no_one"/>
                        </group>
                    </group>
                </page>


                <page string="Cost">
                    <group>
                        <field name="fixed_cost_total" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        <field name="shipping_cost" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        <field name="raw_material_estimated_cost" widget="monetary"
                               options="{'currency_field': 'currency_id'}"
                               attrs="{'invisible': [('flag', '!=', 'repair')]}"/>
                        <field name="operations_estimated_cost" widget="monetary"
                               options="{'currency_field': 'currency_id'}"
                               attrs="{'invisible': [('flag', '!=', 'repair')]}"/>
                    </group>
                </page>

            </xpath>
            <!-- rename commitment_date (Other informations)-->
            <xpath expr="//field[@name='commitment_date']" position="attributes">
                <attribute name="string">Predicted date</attribute>
            </xpath>

        </field>
    </record>




    <!-- TREE -->
    <record id="sale.view_order_tree" model="ir.ui.view">
        <field name="name">Confirmations de commandes</field>
    </record>

    <record id="view_order_tree" model="ir.ui.view">
        <field name="name">Confirmations de commandes</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">

            <xpath expr="//tree" position="attributes">
                <attribute name="string">Confirmations de commandes</attribute>
            </xpath>

        </field>
    </record>

    <!-- SEARCH -->
    <record id="sale_order_view_search_inherit_sale" model="ir.ui.view">
        <field name="name">sale_order_view_search_inherit_sale</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.sale_order_view_search_inherit_sale"/>
        <field name="arch" type="xml">

            <xpath expr="//filter[last()]" position="after">
                <separator/>
                <filter string="A facturer (num. commande)" domain="[('invoice_status','=','to invoice'), ('is_waiting', '=', False)]"/>
                <separator/>
                <filter string="Mois en cours" name="current_month"
                        domain="[
                            ('date_order','&gt;=',((context_today()+relativedelta(day=1)).strftime('%Y-%m-%d'))),
                            ('date_order','&lt;=',((context_today()+relativedelta(day=31)).strftime('%Y-%m-%d')))]"
                />
                <filter string="Mois précédent" name="previous_month"
                        domain="[
                            ('date_order','&lt;=',(context_today()-relativedelta(months=1, day=31)).strftime('%Y-%m-%d')),
                            ('date_order','&gt;=',(context_today()-relativedelta(months=1, day=1)).strftime('%Y-%m-%d'))]"
                />
                <filter string="Année précédente" name="previous_year"
                        domain="[
                            ('date_order','&lt;=',(context_today()-relativedelta(years=1)).strftime('%Y-12-31')),
                            ('date_order','&gt;=',(context_today()-relativedelta(years=1)).strftime('%Y-01-01'))]"
                />

            </xpath>



<!--            <xpath expr="filter[@string='To Invoice']" position="attributes">
                <attribute name="domain">[('invoice_status','=','to invoice'), ('is_waiting', '=', False)]</attribute>
            </xpath>-->


        </field>
    </record>

    <!-- ACTION -->
    <record id="action_orders" model="ir.actions.act_window">
        <field name="name">Confirmations de commandes</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,kanban,form,calendar,pivot,graph</field>
        <field name="search_view_id" ref="sale.sale_order_view_search_inherit_sale"/>
        <field name="context">{}</field>
        <field name="domain">[('state', 'not in', ('draft', 'sent', 'cancel'))]</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create a Quotation, the first step of a new sale.
            </p>
            <p>
                Once the quotation is confirmed, it becomes a sales order.
                You'll be able to invoice it and collect payments.
                From the <i>Sales Orders</i> menu, you can track delivery
                orders or services.
            </p>
        </field>
    </record>
invoice_status
    <record id="sale.action_orders_to_invoice" model="ir.actions.act_window">
        <field name="domain">['&amp;', ('invoice_status','=','to invoice'), ('is_waiting', '=', False)]</field>
    </record>

</odoo>
