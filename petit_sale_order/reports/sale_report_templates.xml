<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_saleorder_document_partner" inherit_id="petit_reports.report_saleorder_document_base">
        <xpath expr="//div[@name='addresses']" position="after">
            <div class="col-xs-5 col-xs-offset-1" t-if="doc.partner_contact_id">
                <strong>A l'attention de</strong>
                <div t-field="doc.partner_contact_id"
                     t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                <p t-if="doc.partner_contact_id.vat"><t t-esc="doc.company_id.country_id.vat_label or 'TIN'"/> : <span t-field="doc.partner_contact_id.vat"/></p>
            </div>
        </xpath>
    </template>
</odoo>
