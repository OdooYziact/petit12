<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_sale_ca_report_pivot" model="ir.ui.view">
            <field name="name">CA facturé par commercial</field>
            <field name="model">sale.ca.report</field>
            <field name="arch" type="xml">
                <pivot string="CA facturé par commercial" disable_linking="True">
                    <field name="user_id" type="col"/>
                    <field name="flag" type="col"/>
                    <field name="invoice_id" type="row"/>
                    <field name="price_subtotal" type="measure"/>
                    <field name="margin" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="sale_ca_report_search" model="ir.ui.view">
            <field name="name">sale.ca.report.search</field>
            <field name="model">sale.ca.report</field>
            <field name="arch" type="xml">
                <search string="CA facturé par commercial">
                    <field name="invoice_date"/>
                    <field name="name"/>
                    <field name="product_id"/>
                    <field name="partner_id"/>
                    <field name="user_id"/>
                    <field name="country_id"/>

                    <filter string="Mois précédent" name="previous" domain="
                    [('invoice_date','&lt;', context_today().strftime('%Y-%m-01')),
                        ('invoice_date','&gt;=',(context_today()+relativedelta(months=-1)).strftime('%Y-%m-01'))]"/>

                    <filter string="Mois en cours" name="current" domain="
                    [('invoice_date','&lt;',(context_today()+relativedelta(months=1)).strftime('%Y-%m-01')),
                        ('invoice_date','&gt;=',context_today().strftime('%Y-%m-01'))]"/>

                    <group expand="0" string="Group By">
                        <filter string="Type de vente" name="flag" context="{'group_by':'flag'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_sale_ca_report_all" model="ir.actions.act_window">
            <field name="name">CA facturé par commercial</field>
            <field name="res_model">sale.ca.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">pivot,graph</field>
            <field name="view_id"></field>  <!-- force empty -->
            <field name="context">{'search_default_current':1}</field>
            <field name="search_view_id" ref="sale_ca_report_search"/>
        </record>

        <menuitem name="CA facturé par commercial"
                  action="petit_sale_order.action_sale_ca_report_all"
                  id="petit_sale_order.menu_action_sale_ca_report"
                  parent="sale.menu_sale_report"
                  groups="sales_team.group_sale_manager"/>

    </data>
</odoo>