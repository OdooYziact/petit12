<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- customer practices -->
    <record id="partner_practices_tree" model="ir.ui.view">
        <field name="name">Partner Practices</field>
        <field name="model">partner.practices</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="partner_practices_form" model="ir.ui.view">
        <field name="name">Partner Practices</field>
        <field name="model">partner.practices</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options="{'terminology': 'archive'}"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label class="oe_edit_only" for="name" string="Nom"/>
                        <h1>
                            <field name="name" placeholder="LibellÃ©"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="partner_practices_action" model="ir.actions.act_window">
        <field name="name">Partner Practices</field>
        <field name="res_model">partner.practices</field>
        <field name="view_type">form</field>
        <field name="view_id" ref="partner_practices_tree"/>
    </record>

    <!-- customer references -->
    <record id="partner_references_tree" model="ir.ui.view">
        <field name="name">Partner References</field>
        <field name="model">partner.references</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="required"/>
            </tree>
        </field>
    </record>

    <record id="partner_references_form" model="ir.ui.view">
        <field name="name">Partner References</field>
        <field name="model">partner.references</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options="{'terminology': 'archive'}"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label class="oe_edit_only" for="name" string="Nom"/>
                        <h1>
                            <field name="name" placeholder="Label"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="note"/>
                        </group>
                        <group>
                            <field name="required"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="partner_references_action" model="ir.actions.act_window">
        <field name="name">Partner References</field>
        <field name="res_model">partner.references</field>
        <field name="view_type">form</field>
        <field name="view_id" ref="partner_references_tree"/>
    </record>


    <menuitem id="menu_partner_practices"
        action="partner_practices_action" parent="contacts.res_partner_menu_config"
        sequence="30"/>

    <menuitem id="menu_partner_references"
        action="partner_references_action" parent="contacts.res_partner_menu_config"
        sequence="31"/>


</odoo>