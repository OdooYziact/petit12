<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res_config_settings_view_form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="mrp.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='mrp']" position="inside">

                <h2>Repair</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="default_picking_type_in"/>
                            <span class="fa fa-lg fa-building-o" title="Default picking type for move in" groups="base.group_multi_company"/>
                            <div class="row">
                                <div class="text-muted col-md-8">
                                    Default picking type for move in.
                                </div>
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="default_picking_type_in"
                                        class="o_light_label"/>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="default_picking_type_out"/>
                            <span class="fa fa-lg fa-building-o" title="Default picking type for move out" groups="base.group_multi_company"/>
                            <div class="row">
                                <div class="text-muted col-md-8">
                                    Default picking type for move out.
                                </div>
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="default_picking_type_out"
                                        class="o_light_label"/>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </xpath>
        </field>
    </record>


</odoo>
