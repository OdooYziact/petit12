<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!--mrp_repair_order.operation_product_category-->
        <record id="operation_product_category" model="product.category">
            <field name="name">Repair operations</field>
        </record>

        <!--mrp_repair_order.generic_repair_product-->
        <record id="generic_repair_product" model="product.template">
            <field name="name">Repair Service</field>
            <field name="type">service</field>
            <field name="categ_id" ref='operation_product_category'/>
        </record>

        <record id="generic_repair_product_operation" model="product.template">
            <field name="name">Product operation</field>
            <field name="type">service</field>
            <field name="categ_id" ref='operation_product_category'/>
        </record>

        <record id="product_to_repair" model="product.template">
            <field name="name">Product to repair</field>
            <field name="type">product</field>
            <field name="tracking">serial</field>
            <field name="purchase_ok" eval="False"/>
            <field name="sale_ok" eval="True"/>
        </record>

        <!--attachment.type -->
        <record id="attachment_repair_type_1" model="ir.attachment.type">
            <field name="name">Entry</field>
            <field name="code">mrp.repair.order</field>
            <field name="active" eval="True"/>
        </record>

        <record id="attachment_repair_type_2" model="ir.attachment.type">
            <field name="name">Diagnostic</field>
            <field name="code">mrp.repair.order</field>
            <field name="active" eval="True"/>
        </record>

        <record id="attachment_repair_type_3" model="ir.attachment.type">
            <field name="name">Winding</field>
            <field name="code">mrp.repair.order</field>
            <field name="active" eval="True"/>
        </record>

        <record id="attachment_repair_type_4" model="ir.attachment.type">
            <field name="name">Shipment</field>
            <field name="code">mrp.repair.order</field>
            <field name="active" eval="True"/>
        </record>

        <!--stock.location -->
        <record id="stock_location_manufacture" model="stock.location">
            <field name="name">Atelier</field>
            <field name="location_id" ref="stock.stock_location_stock"/>
            <field name="return_location" eval="False"/>
            <field name="scrap_location" eval="False"/>
            <field name="company_id" ref="base.main_company"/>
            <field name="usage">internal</field>
        </record>

        <record id="picking_type_manufacture" model="stock.picking.type">
            <field name="name">Pr√©paration atelier</field>
            <field name="sequence_id" ref="stock.seq_picking_internal"/>
            <field name="default_location_src_id" ref="stock.stock_location_stock"/>
            <field name="default_location_dest_id" ref="stock_location_manufacture"/>
            <field name="use_create_lots" eval="False"/>
            <field name="use_existing_lots" eval="True"/>
            <field name="show_reserved" eval="True"/>
            <field name="code">internal</field>
            <field name="return_picking_type_id" ref="stock.picking_type_internal"/>
        </record>

    </data>
</odoo>
