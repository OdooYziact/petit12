<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_account_invoice_export_tree" model="ir.ui.view">
        <field name="name">account.invoice.export</field>
        <field name="model">account.invoice.export</field>
        <field name="arch" type="xml">
            <tree string="" create="false" edit="false" decoration-danger="income != outcome">
                <field name="create_date" string="Date" widget="datetime"/>
                <field name="journal"/>
                <field name="income" string="Crédit"/>
                <field name="outcome" string="Débit"/>
                <field name="invoice_count" string="Facture(s)"/>
                <field name="create_uid" string="Utilisateur"/>
            </tree>
        </field>
    </record>

    <record id="view_account_invoice_export_form" model="ir.ui.view">
        <field name="name">account.invoice.export</field>
        <field name="model">account.invoice.export</field>
        <field name="arch" type="xml">
            <form string="Export" create="false" edit="false">
                <sheet>
                    <div class="oe_button_box" name="expense_button_box">
                        <button name="action_view_invoice" type="object" class="oe_stat_button" icon="fa-list"
                                groups="base.group_user">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value"><field name="invoice_count" widget="statinfo" nolabel="1"/></span>
                                <span class="o_stat_text">Factures</span>
                            </div>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="journal"/>
                            <field name="income" string="Crédit"/>
                            <field name="outcome" string="Débit"/>
                        </group>
                        <group>
                            <field name="create_date" string="Date" widget="datetime"/>
                            <field name="create_uid" string="Utilisateur"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
   <record model="ir.actions.act_window" id="action_account_invoice_export">
        <field name="name">Historique</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.invoice.export</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'create': False}</field>
        <field name="view_id" ref="view_account_invoice_export_tree"/>
   </record>

    <menuitem name="Historique"
              id="menu_account_invoice_export"
              parent="menu_exports"
              action="action_account_invoice_export"
              groups="account.group_account_user"/>

</odoo>