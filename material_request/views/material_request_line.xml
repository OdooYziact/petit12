<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_material_request_line_tree" model="ir.ui.view">
           <field name="name">view_material_request_line_tree</field>
           <field name="model">material.request.line</field>
           <field name="arch" type="xml">
               <tree string="Material request line"  decoration-muted="state in ('done','cancel')"
                  decoration-info="state=='purchase_rfq'" decoration-warning="state in ('draft', 'new')">
                   <field name="request"/>
                   <field name="request_id"/>
                   <field name="document_name"/>
                   <field name="name"/>
                   <field name="product_id"/>
                   <field name="product_qty"/>
                   <field name="product_uom"/>
                   <field name="purchase_order_count"/>
                   <field name="state"/>
               </tree>
           </field>
        </record>


        <record id="view_material_request_line_form" model="ir.ui.view">
            <field name="name">view_material_request_line_form</field>
            <field name="model">material.request.line</field>
            <field name="arch" type="xml">
                <form string="Material request line">
                    <header>
                        <button name="action_done" string="Mark as done" type="object" class="oe_highlight"
                                states="draft,progress" groups="purchase.group_purchase_manager"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-archive">
                                    <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <label for="request_id"/>
                            <h1><field name="request_id"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="request"/>
                                <field name="document_name"/>
                                <field name="name"/>
                                <field name="description"/>
                                <field string="In Progress" name="is_progress" groups="base.group_no_one"/>
                                <field string="Done" name="is_done" groups="base.group_no_one"/>
                            </group>
                            <group>
                               <field name="product_id"/>
                               <field name="product_qty"/>
                                <field name="product_uom"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Purchase order">
                                <field name="purchase_order_ids" nolabel="1" readonly="1" options="{'no_create': True, 'no_open': True}">
                                    <tree>
                                        <field name="order_id"/>
                                        <field name="partner_id"/>
                                        <field name="date_order"/>
                                        <field name="state"/>
                                        <button name="action_view_order" type="object" class="oe_link" icon="fa-link"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="view_material_request_line_search" model="ir.ui.view">
            <field name="name">material.request.line.search</field>
            <field name="model">material.request.line</field>
            <field name="arch" type="xml">
                <search string="">
                    <field name="request"/>
                    <field name="name"/>
                    <field name="product_id"/>
                    <field name="state"/>
                    <field name="request_id"/>
                    <separator/>
                    <filter name="undefined" string="Undefined" domain="[('product_id', '=', False)]"/>
                    <!--<filter string="Active" name="active" domain="[('active', '=',True)]"/>-->
                    <!--<filter string="Inactive" domain="[('active', '=',False)]"/>-->
                    <group expand="0" string="Group By">
                        <filter string="Request" domain="[]" context="{'group_by':'request'}"/>
                        <filter string="Material request" domain="[]" context="{'group_by':'request_id'}"/>
                        <filter string="Product" domain="[]" context="{'group_by':'product_id'}"/>
                        <filter string="State" domain="[]" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="ir_filters_material_request" model="ir.filters">
            <field name="name">Origin document</field>
            <field name="model_id">material.request.line</field>
            <field name="user_id" eval="False"/>
            <field name="context">{'group_by': ['document_name']}</field>
        </record>

        <record id="action_material_request_line_tree" model="ir.actions.act_window">
            <field name="name">Material request line</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">material.request.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_material_request_line_search"/>
        </record>


        <menuitem
            id="material_request_line_model_act"
            name="Material request line"
            sequence="70"
            action="action_material_request_line_tree"
            parent="purchase.menu_procurement_management"/>

    </data>
</odoo>