<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="view_purchase_order_create" model="ir.ui.view">
            <field name="name">Create purchase order</field>
            <field name="model">purchase.order.create</field>
            <field name="arch" type="xml">
                <form>
                    <div>
                        <label for="partner_id"/>
                        <field string="Supplier" name="partner_id"/>
                    </div>
                    <field name="request_id" invisible="1"/>
                    <field name="wizard_line" nolabel="1" options="{'no_create': True, 'no_open': True}">
                        <tree create="false">
                            <field name="name"/>
                            <field name="product_id"/>
                            <field name="product_qty"/>
                            <field name="product_uom"/>
                        </tree>
                    </field>

                    <footer>
                        <button name="action_create_purchase_order" string="Validate"
                            colspan="1" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_purchase_order_create" model="ir.actions.act_window">
            <field name="name">Create purchase order</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.order.create</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

</odoo>