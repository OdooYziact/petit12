<?xml version="1.0" encoding="utf-8"?>
<odoo>


        <!--  Change Product Quantity -->
        <record id="view_create_purchase_requisition_wizard" model="ir.ui.view">
            <field name="name">Create purchase requisition</field>
            <field name="model">wizard.pr</field>
            <field name="arch" type="xml">
                <form>
                    <field name="request_id" invisible="1"/>
                    <field name="request_line" nolabel="1" options="{'no_create': True, 'no_open': True}">
                        <tree create="false">
                            <field name="name"/>
                            <field name="product_id"/>
                            <field name="product_qty"/>
                            <field name="product_uom"/>
                        </tree>
                    </field>

                    <footer>
                        <button name="action_create_purchase_requisition" string="Validate"
                            colspan="1" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_create_purchase_requisition_wizard" model="ir.actions.act_window">
            <field name="name">Create purchase requisition</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard.pr</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

</odoo>