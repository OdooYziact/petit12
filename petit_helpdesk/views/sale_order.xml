<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Inherit Form View to Modify it -->
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">view_order_form</field>
        <field name="model">sale.order</field>
        <field name="groups_id" eval="[(4, ref('purchase.group_purchase_manager'))]"/>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//button[@name='action_view_invoice']" position="before">

                <field name="helpdesk_ticket_id" invisible="True"/>
                <button name="action_view_helpdesk_ticket" type="object" string="Ticket" class="oe_stat_button" icon="fa-ticket" attrs="{'invisible': [('helpdesk_ticket_id', '=', False)]}">
                </button>

            </xpath>

            <xpath expr="//button[@name='action_view_purchase_requisition']" position="attributes">
                <attribute name="attrs">{'invisible': [('helpdesk_ticket_id', '=', False)]}</attribute>
            </xpath>

            <xpath expr="//button[@name='button_create_purchase_requisition']" position="attributes">
                <attribute name="attrs">{'invisible': [('helpdesk_ticket_id', '=', False)]}</attribute>
            </xpath>

        </field>
    </record>

