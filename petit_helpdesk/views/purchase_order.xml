<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!--vue form demande de prix-->
    <record id="purchase_order_form" model="ir.ui.view">
        <field name="name">purchase_order_form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">


            <xpath expr="//button[@name='action_view_invoice']" position="before">
                <field name="helpdesk_ticket_id" invisible="True"/>
                <button name="action_view_helpdesk_ticket" type="object" string="Ticket" class="oe_stat_button"
                        icon="fa-ticket" attrs="{'invisible': [('helpdesk_ticket_id', '=', False)]}"
                        groups="helpdesk.group_helpdesk_user">
                </button>
            </xpath>

            <xpath expr="//button[@name='action_view_sale_order']" position="attributes">
                <attribute name="attrs">{'invisible': ['|',('sale_order_id', '=', False),('helpdesk_ticket_id', '=', False)]}</attribute>
            </xpath>

            <xpath expr="//button[@name='action_view_purchase_requisition']" position="attributes">
                <attribute name="attrs">{'invisible': ['|',('requisition_id', '=', False),('helpdesk_ticket_id', '=', False)]}</attribute>
            </xpath>

        </field>
    </record>

