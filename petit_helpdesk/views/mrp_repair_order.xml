<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Form View to Modify it -->
    <record id="view_repair_order_form" model="ir.ui.view">
        <field name="name">view_repair_order_form</field>
        <field name="model">mrp.repair.order</field>
        <field name="groups_id" eval="[(4, ref('helpdesk.group_helpdesk_user'))]"/>
        <field name="inherit_id" ref="mrp_repair_order.view_repair_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='receipt_date']" position="after">
                <field name="helpdesk_ticket_id" domain="[('partner_id', '=', partner_id)]"/>
            </xpath>

        </field>
    </record>
</odoo>
