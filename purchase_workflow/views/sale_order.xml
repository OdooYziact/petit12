<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Inherit Form View to Modify it -->
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">view_order_form</field>
        <field name="model">sale.order</field>
        <field name="groups_id" eval="[(4, ref('purchase.group_purchase_manager'))]"/>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='print_quotation']" position="after">
                <button name="button_create_purchase_requisition" string="CrÃ©er un appel d'offres" type="object" class=""/>
            </xpath>
            <xpath expr="//button[@name='action_view_invoice']" position="before">
                <button name="action_view_purchase_requisition" type="object" class="oe_stat_button" icon="fa-list-alt">
                    <field name="purchase_requisition_count" string="Appel d'offres" widget="statinfo"/>
                </button>

                <field name="purchase_order_ids" invisible="True"/>
                <button name="action_view_purchase_order" type="object" class="oe_stat_button" icon="fa-list-alt" attrs="{'invisible': [('purchase_order_ids', '=', False)]}">
                    <field name="purchase_order_count" string="Achat(s)" widget="statinfo"/>
                </button>
            </xpath>

        </field>
    </record>


</odoo>