<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- FORM -->
    <record id="view_delivery_carrier_form" model="ir.ui.view">
        <field name="name">view_delivery_carrier_form</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='integration_level']" position="after">
                <field name="carrier_type" string="Type de transport"/>
            </xpath>

        </field>
    </record>

    <!-- TREE -->
    <record id="view_delivery_carrier_tree" model="ir.ui.view">
        <field name="name">view_delivery_carrier_tree</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_tree"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='delivery_type']" position="after">
                <field name="carrier_type"/>
            </xpath>

        </field>
    </record>

    <!-- SEARCH -->
    <record id="view_delivery_carrier_search" model="ir.ui.view">
        <field name="name">view_delivery_carrier_search</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_search"/>
        <field name="arch" type="xml">

            <xpath expr="//filter[@name='provider']" position="after">
                <filter string="Type de transport" name="carrier_type" context="{'group_by':'carrier_type'}"/>
            </xpath>

        </field>
    </record>

</odoo>