<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="report_purchasequotation_document_contact" inherit_id="purchase.report_purchasequotation_document">

        <xpath expr="//p[@t-if='o.partner_id.vat']" position="after">
            <p t-if="o.partner_contact_id and o.partner_contact_id.name"><strong>Contact</strong> : <span t-field="o.partner_contact_id.name"/></p>
        </xpath>


        <!-- Informations principales -->
        <xpath expr="//h2" position="after">
            <div class="row mt32 mb32">
                <div t-if="o.name" class="col-xs-3">
                    <strong>Notre référence</strong>
                    <p t-field="o.name"/>
                </div>
                <div t-if="o.date_order" class="col-xs-3">
                    <strong>Date de la demande</strong>
                    <p t-field="o.date_order" t-options='{"widget": "date"}'/>
                </div>
                <div t-if="o.write_uid" class="col-xs-3">
                    <strong>Validé par</strong>
                    <p t-field="o.write_uid"/>
                </div>
            </div>
        </xpath>


        <!-- Changement format date -->
        <xpath expr="//span[@t-field='order_line.date_planned']" position="attributes">
            <attribute name="t-options">
                {"widget": "date"}
            </attribute>
        </xpath>

        <xpath expr="//div[@class='page']/div[2]" position="replace">
            <div class="row mt32 mb32">
                <div class="col-xs-6">
                    <strong>A l'attention de</strong>
                    <div t-if="o.partner_contact_id">
                        <div t-field="o.partner_contact_id.parent_id.name"/>
                        <div t-field="o.partner_contact_id.name"/>
                        <div t-field="o.partner_contact_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                        <p t-if="o.partner_contact_id.vat"><t t-esc="o.company_id.country_id.vat_label or 'TIN'"/>: <span t-field="o.partner_contact_id.vat"/></p>
                    </div>

                    <div t-else="">
                        <div t-field="o.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                        <p t-if="o.partner_id.vat"><t t-esc="o.company_id.country_id.vat_label or 'TIN'"/>: <span t-field="o.partner_id.vat"/></p>
                    </div>
                </div>
                <div class="col-xs-6">
                    <strong>Adresse de livraison</strong>
                    <div t-if="o.dest_address_id">
                        <div t-field="o.dest_address_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}"/>
                    </div>
                    <div t-if="not o.dest_address_id and o.picking_type_id.warehouse_id">
                        <span t-field="o.picking_type_id.warehouse_id.name"/>
                        <div t-field="o.picking_type_id.warehouse_id.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;], &quot;no_marker&quot;: True}"/>
                    </div>
                </div>

            </div>
        </xpath>

    </template>



    <template id="report_purchaseorder_document_dates" inherit_id="purchase.report_purchaseorder_document">

        <!-- Changement format dates -->
        <xpath expr="//p[@t-field='o.date_order']" position="attributes">
            <attribute name="t-options">
                {"widget": "date"}
            </attribute>
        </xpath>


        <xpath expr="//span[@t-field='line.date_planned']" position="attributes">
            <attribute name="t-options">
                {"widget": "date"}
            </attribute>
        </xpath>

        <xpath expr="//div[@class='page']/div[2]" position="replace">
            <div class="row">
                <div class="col-xs-6">
                    <strong>A l'attention de</strong>
                    <div t-if="o.partner_contact_id">
                        <div t-field="o.partner_contact_id.parent_id.name"/>
                        <div t-field="o.partner_contact_id.name"/>
                        <div t-field="o.partner_contact_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                        <p t-if="o.partner_contact_id.vat"><t t-esc="o.company_id.country_id.vat_label or 'TIN'"/>: <span t-field="o.partner_contact_id.vat"/></p>
                    </div>
                    <div t-else="">
                        <div t-field="o.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;,&quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                        <p t-if="o.partner_id.vat"><t t-esc="o.company_id.country_id.vat_label or 'TIN'"/>: <span t-field="o.partner_id.vat"/></p>
                    </div>
                </div>
                <div class="col-xs-6">
                    <strong>Adresse de livraison</strong>
                    <div t-if="o.dest_address_id">
                        <div t-field="o.dest_address_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}"/>
                    </div>

                    <div t-if="not o.dest_address_id and o.picking_type_id and o.picking_type_id.warehouse_id">
                        <span t-field="o.picking_type_id.warehouse_id.name"/>
                        <div t-field="o.picking_type_id.warehouse_id.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;], &quot;no_marker&quot;: True}"/>
                    </div>
                </div>
            </div>
        </xpath>

        <xpath expr="//h2[1]" position="replace">
            <h2 t-if="o.state != 'draft'">Commande <span t-field="o.name"/></h2>
        </xpath>
        <xpath expr="//h2[2]" position="replace">
            <h2 t-if="o.state == 'draft'">Demande pour devis <span t-field="o.name"/></h2>
        </xpath>

        <xpath expr="//div[@class='row mt32 mb32']" position="replace">
            <div class="row mt32 mb32">
                <div t-if="o.name" class="col-xs-3">
                    <strong>Notre référence</strong>
                    <p t-field="o.name"/>
                </div>
                <div t-if="o.partner_ref" class="col-xs-3">
                    <strong>N° de commande</strong>
                    <p t-field="o.partner_ref"/>
                </div>
                <div t-if="o.date_order" class="col-xs-3">
                    <strong>Date de la demande</strong>
                    <p t-field="o.date_order" t-options='{"widget": "date"}'/>
                </div>
                <div t-if="o.write_uid" class="col-xs-3">
                    <strong>Validé par</strong>
                    <p t-field="o.write_uid"/>
                </div>
            </div>
        </xpath>

    </template>

</odoo>