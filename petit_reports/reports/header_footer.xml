<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Modification du header et du footer pour le style " boxed " -->
    <template id="petit_reports_header_boxed" inherit_id="web.external_layout_boxed">

        <!-- Header -->

        <!-- Logo (gauche) -->
        <xpath expr="//div[@class='header o_boxed_header']/div/div[1]" position="replace">
            <div class="col-xs-2">
                <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % to_text(company.logo)"/>
            </div>
        </xpath>


        <!-- Informations (droite) -->
        <xpath expr="//div[@class='header o_boxed_header']/div/div[2]" position="replace">
            <div class="col-xs-3 text-right mb4">
                <div name="company_address" class="mb4">
                    <h5 class="company_address" t-field="company.partner_id" t-field-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: true}"/>
                </div>
            </div>
        </xpath>


        <!-- Slogan - Logos (centre) -->
        <xpath expr="//div[@class='header o_boxed_header']/div/div[1]" position="after">
            <div class="col-xs-7 text-center">
                <h4 class="mt0" t-field="company.report_header"/>
                <img src="/petit_reports/static/src/img/header_logos.png" alt="Logos" width="400px"/>
            </div>
        </xpath>

        <!-- Footer -->

        <!-- Fax dans les informations -->
        <xpath expr="//div[@class='footer o_boxed_footer']/div/ul/li[2]" position="after">
            <li t-if="company.partner_id.fax">Fax : <t t-esc="company.partner_id.fax"/></li>
        </xpath>


        <!-- Ajout d'informations generales -->
        <xpath expr="//ul[@class='list-inline']" position="after">
            <ul class="list-inline">
                <li t-if="company.company_registry"><span t-field="company.company_registry"/></li>
                <li t-if="company.siret">SIRET : <span t-field="company.siret"/></li>
                <li t-if="company.ape">APE : <span t-field="company.ape"/></li>
                <li t-if="company.capital">Capital : <span t-field="company.capital"/></li>
            </ul>
        </xpath>

    </template>

</odoo>