<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Adresses -->
    <template id="petit_reports.report_mrprepair_header_addresse">

        <t t-call="web.html_container">

            <h1 class="text-center">Rapport d'expertise et de travaux</h1>
            <h3 class="text-center" t-if="o.partner_id"><strong>Client : </strong><span t-field="o.partner_id.name"/></h3>
            <h3 class="text-center" t-if="o.partner_contact_id"><strong>Contact : </strong><span t-field="o.partner_contact_id.name"/></h3>
            <h4 class="text-center">
                <strong>Nos références</strong><br/>
                <div t-if="o.name">
                    N° affaire<br/>
                    <span t-field="o.name"/>
                </div>
            </h4>

            <br/>

        </t>

    </template>



    <template id="petit_reports.report_mrprepair_header_infos">

        <t t-call="web.html_container">

            <!-- Informations principales -->
            <div name="info">
                <div class="row">
                    <div t-if="o.partner_id and o.partner_id.ref" class="col-xs-3">
                        <strong>Votre N° appel d'offre</strong>
                        <p t-field="o.partner_id.ref"/>
                    </div>
                    <div t-if="o.receipt_date" class="col-xs-3">
                        <strong>Entrée du matériel</strong>
                        <p t-field="o.receipt_date" t-options='{"widget": "date"}'/>
                    </div>
                    <div t-if="o.partner_id and o.partner_id.user_id" class="col-xs-3">
                        <strong>Commercial</strong>
                        <p t-field="o.partner_id.user_id"/>
                    </div>
                    <div t-if="o.write_uid" class="col-xs-3">
                        <strong>Rédacteur</strong>
                        <p t-field="o.write_uid"/>
                    </div>
                </div>

                <br />

                <!-- References client -->
                <t t-if="o.partner_references">
                    <h4>Vos références</h4>
                    <table class="table table_references">
                        <tr t-foreach="o.get_references_fields()" t-as="line">
                            <t t-foreach="line" t-as="elem">
                                <td width="25%">
                                    <span t-esc="elem['name']"/> <span t-esc="elem['value']"/>
                                </td>
                            </t>
                        </tr>
                    </table>
                </t>

                <!-- Caracteristiques techniques -->
                <t t-if="o.specification_ids">
                    <h4>Caractéristiques techniques du matériel</h4>
                    <table class="table table-condensed table_caracteristiques">
                        <thead>
                            <tr>
                                <th>Libellé</th>
                                <th>Valeur</th>
                                <th>Unité</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="o.specification_ids" t-as="specification">
                                <tr>
                                    <td><span t-field="specification.description"/></td>
                                    <td><span t-field="specification.value"/></td>
                                    <td><span t-field="specification.unit"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </t>

                <div t-if="o.issue">
                    <strong>Demande client</strong> : <span t-field="o.issue"/><br />
                </div>
            </div>

        </t>

    </template>

</odoo>