<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="paperformat_euro_no_margin" model="report.paperformat">
        <field name="name">European A4 without borders</field>
        <field name="default" eval="False" />
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">5</field>
        <field name="margin_bottom">5</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">0</field>
    </record>

    <!-- Facture sans en-tete -->
    <report
            id="petit_reports.action_report_account_invoice_no_header"
            string="Facture sans en-tête"
            model="account.invoice"
            report_type="qweb-pdf"
            file="petit_reports.report_account_invoice_no_header"
            name="petit_reports.report_account_invoice_no_header"
    />

     <!--Rapport d'expertise-->
    <report
            id="petit_reports.report_mrprepairorder_expertise_action"
            string="Rapport de travaux / Rapport d'expertise"
            model="mrp.repair.order"
            report_type="qweb-pdf"
            file="petit_reports.report_mrprepairorder_expertise"
            name="petit_reports.report_mrprepairorder_expertise"
    />

    <!-- Etiquette A4 -->
    <record id="paperformat_etiquette_A4" model="report.paperformat">
        <field name="name">Etiquette A4</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="orientation">Landscape</field>
    </record>

    <report
        id="petit_reports.report_etiquette_A4_action"
        paperformat="paperformat_etiquette_A4"
        string="Etiquette A4"
        model="mrp.repair.order"
        report_type="qweb-pdf"
        file="petit_reports.report_etiquette_A4"
        name="petit_reports.report_etiquette_A4"
    />

    <report
            id="sale.action_report_saleorder"
            string="Devis / AR"
            model="sale.order"
            report_type="qweb-pdf"
            file="sale.report_saleorder"
            name="sale.report_saleorder"
            print_report_name="(object.state in ('draft', 'sent') and 'Devis - %s' % (object.name)) or 'Commande - %s' % (object.name)"
    />

    <report
            id="petit_reports.action_report_saleorder_document_fix"
            string="Devis"
            model="sale.order"
            report_type="qweb-pdf"
            file="petit_reports.report_saleorder_document_fix"
            name="petit_reports.report_saleorder_document_fix"
    />

    <!-- Bilan affaire Negoce-->
    <record id="petit_reports.action_report_saleorder_bilan" model="ir.actions.report">
        <field name="name">Bilan d'affaire de négoce</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">petit_reports.report_saleorder_bilan</field>
        <field name="paperformat_id" ref="paperformat_euro_no_margin"/>
    </record>

    <!--Bilan affaire reparation-->
    <record id="petit_reports.action_report_mrprepairorder_bilan" model="ir.actions.report">
        <field name="name">Bilan d'affaire de réparation</field>
        <field name="model">mrp.repair.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">petit_reports.report_mrprepairorder_bilan</field>
        <field name="paperformat_id" ref="paperformat_euro_no_margin"/>
    </record>

    <!-- Etiquette dymo -->
    <record id="paperformat_etiquette_dymo" model="report.paperformat">
        <field name="name">Dymo Etiquette Paperformat</field>
        <field name="default" eval="True" />
        <field name="format">custom</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">0</field>
        <field name="margin_bottom">0</field>
        <field name="margin_left">0</field>
        <field name="margin_right">0</field>
        <field name="page_height">101</field>
        <field name="page_width">54</field>
        <field name="header_spacing">0</field>
        <field name="header_line" eval="False"/>
    </record>

    <record id="petit_reports.report_etiquette_dymo_action" model="ir.actions.report">
        <field name="name">Etiquette d'identification</field>
        <field name="model">mrp.repair.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">petit_reports.report_etiquette_dymo</field>
        <field name="print_report_name">'%s' % (object.name)</field>
        <field name="paperformat_id" ref="paperformat_etiquette_dymo"/>
    </record>

</odoo>