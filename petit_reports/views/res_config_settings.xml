<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Affichage du champ de Termes et conditions pour les factures -->
    <record id="res_config_settings_view_form_invoice" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.invoice</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[@id='invoicing_settings']/div[3]" position="after">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <label for="invoicing_conditions"/>
                        <field name="invoicing_conditions"/>
                    </div>
                </xpath>
            </field>
    </record>

</odoo>
