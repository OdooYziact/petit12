<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Ajout du champ de demande client et du delai pour chaque ligne -->
    <record id="petit_reports_sale_order_form_view" model="ir.ui.view">
            <field name="name">sale_order_divers</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//form/sheet/notebook/page[1]/field[1]/tree" position="inside">
                    <field name="delai_line"/>
                </xpath>

                <xpath expr="//notebook" position="before">
                    <group>
                        <field name="comment"/>
                    </group>
                </xpath>

                <xpath expr="//button[@name='print_quotation']" position="after">
                    <button string="Bilan d'affaire de nÃ©goce" type="action" name="petit_reports.action_report_saleorder_bilan"  states="done,sale" attrs="{'invisible': ['|', ('flag', '=', 'repair')]}" class="oe_highlight"/>
                </xpath>

            </field>
    </record>

</odoo>