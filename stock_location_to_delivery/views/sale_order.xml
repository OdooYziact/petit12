<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

	<record id="view_order_form" model="ir.ui.view">
		<field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

	        <xpath expr="//field[@name='name']" position="after">
	        	<button name="get_route_line" type="object" string="Route" attrs="{'invisible':True}"/>
	        </xpath>

        </field>
	</record>

	<record id="view_order_form_inherit_sale_stock" model="ir.ui.view">
		<field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_stock.view_order_form_inherit_sale_stock"/>
		<field name="priority" eval="20"/>
        <field name="arch" type="xml">

			<xpath expr="//field[@name='order_line']/tree//field[@name='route_id']" position="before">
				<field name="is_delivery" invisible="1"/>
			</xpath>

			<xpath expr="//field[@name='order_line']/tree//field[@name='route_id']" position="attributes">
	        	<attribute name="attrs">{'invisible': [('is_delivery', '=', True)]}</attribute>
	        </xpath>

        </field>
	</record>

</odoo>